<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="#E8F5E9"> <!-- jasna zieleń -->

    <TextView
        android:id="@+id/tvActivationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aktywacja konta"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#2E7D32"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Na podany adres email został wysłany kod aktywacyjny"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textColor="#2E7D32"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/etCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#4CAF50"
        android:hint="Wprowadź kod aktywacyjny"
        android:inputType="number"
        android:maxLength="6"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/btnActivate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aktywuj konto"
        android:backgroundTint="#4CAF50"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tvActivateError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="gone"
        android:text="Błąd aktywacji"
        android:textSize="14sp"
        android:textAlignment="center" />
</LinearLayout>
